LoadPlugin write_graphite
FQDN=false
Hostname "{{ ansible_hostname }}"
<Plugin write_graphite>
        <Node "graphing">
                Host "{{ carbonrelay_host }}"
                Port "{{ carbonrelay_port }}"
                Protocol "tcp"
                LogSendErrors true
                Prefix "{{ internal_target_space_id }}.{{ deploy_environment }}.{{ cluster_name }}."
                StoreRates true
                AlwaysAppendDS false
                EscapeCharacter "."
                SeparateInstances true
        </Node>
</Plugin>
